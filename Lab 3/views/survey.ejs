<html>
    <head>
        <title>MVC Ex Solution Landing Page</title>
    </head>
    <body>
        <form method="POST">
            <p>Survey page: <%= page %> for user <%= username %></p>
            <p><%= question %></p>
            <p><a href="/preference">Set your rendering preferences</a></p>
            <p><% let i; for (i = 0; i < options.length; i++) { %>
                <input type="radio" name="choice" value= <%= i %> <%= i==selectedChoice ? "checked" : "" %>> <%= options[i].choice %>
                <% if (preference == "vertical") { %>
                    <br>
                <% } %>
            <% }; %></p>
            <% if (prevFlag == true) { %>
                <input type="submit" name="action" value="prev">
            <% } %>
            <input type="submit" name="action" value="next">
        </form>
    </body>
</html>